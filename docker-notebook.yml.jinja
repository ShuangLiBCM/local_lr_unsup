version: '2'
# launches as many notebooks as GPUs
services:
  # Add as many notebooks as GPUs
  {% for i in range(N_GPU) %}
  gpu_notebook{{i}}:
    build:
      context: .
      dockerfile: Dockerfile_GPU
    devices:
      - /dev/nvidia{{i}}
    env_file: .env
    ports:
      - "300{{i}}:8888"
      - "500{{i}}:6006"
    volumes:
      - .:/src/learning_plasticity
      - .:/notebooks
      - ./archive:/tensorboard
      - /mnt/lab/shuang_data:/data
  {% endfor %}
